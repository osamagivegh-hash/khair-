// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model News {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  title      String
  content    String
  isBreaking Boolean  @default(false)
  createdAt  DateTime @default(now())
}

model Program {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  title        String
  description  String
  targetAmount Float
  raisedAmount Float    @default(0)
  imageUrl     String
  category     String
  createdAt    DateTime @default(now())
}

model Slide {
  id       String @id @default(auto()) @map("_id") @db.ObjectId
  title    String
  subtitle String
  imageUrl String
  order    Int    @default(0)
}

model Message {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  name      String
  email     String
  subject   String
  message   String
  createdAt DateTime @default(now())
}
